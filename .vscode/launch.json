{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Flask + Chrome",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=127.0.0.1",
                "--port=8080"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "preLaunchTask": "open-chrome"
        }
    ]
}